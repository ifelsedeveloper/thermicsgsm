<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item android:state_pressed="false" >
	<shape xmlns:android="http://schemas.android.com/apk/res/android"
  	android:shape="rectangle">
  		<gradient android:startColor="@color/gradient_orange1" 
    		android:endColor="@color/gradient_orange2"
    		android:angle="270" />
  		<corners android:radius="0dp" />
  	<stroke android:width="3px" android:color="@color/border_button_color" />
	</shape>
</item>
<item android:state_pressed="true" >
	<shape xmlns:android="http://schemas.android.com/apk/res/android"
  	android:shape="rectangle">
  		<gradient android:startColor="@color/button_light_orange" 
    		android:endColor="@color/button_light_orange"
    		android:angle="270" />
  		<corners android:radius="0dp" />
  	<stroke android:width="3px" android:color="@color/border_button_color" />
	</shape>
</item>

</selector>